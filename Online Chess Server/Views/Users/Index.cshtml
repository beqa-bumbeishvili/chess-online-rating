@model IEnumerable<Online_Chess_Server.Models.User>

@{
    ViewBag.Title = "Index";
}

@{
    if ((string)Session["UserRole"] == "admin")
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
}

<div style="margin-left:190px;" class="col-md-8">
    <div style="background-color:white">
        <table class="table table-bordered table-hover" style="background-color:white;">
            <tr style="border:2px solid #919353;">
                <th style="text-align:center; border:2px solid #515302; background-color:#919353">
                    <b style="font-size:17px;">Name </b>
                </th>
                <th style="text-align:center; border:2px solid #515302; background-color:#919353">
                    <b style="font-size:17px;">Facebook Name </b>
                </th>
                <th style="text-align:center; border:2px solid #515302; background-color:#919353">
                    <b style="font-size:17px;">Lichess Name </b>
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td style="text-align:center; text-align:center; border:2px solid #d2d3a6; background-color:#B4B576;">
                      <b>  <a href="@Url.Action("UserProfile","Users",new {userId=item.ID })">@item.FullName</a> </b>
                    </td>
                    <td style="text-align:center; text-align:center; border:2px solid #d2d3a6; background-color:#B4B576;">
                        <b> @Html.DisplayFor(modelItem => item.UserName)</b> 
                    </td>
                    <td style="text-align:center; text-align:center; border:2px solid #d2d3a6; background-color:#B4B576;">
                        <b>  @Html.DisplayFor(modelItem => item.LichessName)</b>
                    </td>
                    @{
                        if ((string)Session["UserRole"] == "admin")
                        {
                            <td style="text-align:center; border:2px solid #d2d3a6; background-color:#B4B576;">
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                            </td>
                        }
                    }
                </tr>
                        }

        </table>
    </div>
</div>