@{
    Layout = null;


    var action = ViewContext.RouteData.Values["Action"].ToString();
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.2/Chart.min.js"></script>
    <meta name="author" content="">
    <title>Online Chess Server</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <link href="~/Content/Site.css" rel="stylesheet">
    <link href="~/Content/business-casual.css" rel="stylesheet">
    <link rel='shortcut icon' href='https://encrypted-tbn1.gstatic.com/images?q=tbn:ANd9GcS8WJnQFZ9Coop8B_GzkxbaZfERveDpYOjyqWxxrxj_k1Ii6s9u' type='image/x-icon'/ >
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Josefin+Slab:100,300,400,600,700,100italic,300italic,400italic,600italic,700italic" rel="stylesheet" type="text/css">

</head>
<body>
    <div class="brand" style="color:#e7e7e7">Online Chess Server</div>
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- navbar-brand is hidden on larger screens, but visible when the menu is collapsed -->
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Online Chess Server</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav" id="menu">

                    <li class="navlist @(controller=="Home" && action == "Index" ? "selected" : "")">
                        <a href="@Url.Action("Index", "Home")">Home</a>
                    </li>
                    <li class="navlist @(controller=="Ratings" && action == "Index" ? "selected" : "")">
                        <a href="@Url.Action("Index", "Ratings")">Ratings</a>
                    </li>
                    <li class="navlist @(controller=="Games" && action == "Index" ? "selected" : "")">
                        <a href="@Url.Action("Index", "Games")">Games</a>
                    </li>
                    <li class="navlist @(controller=="Users" && action == "Index" ? "selected" : "")">
                        <a href="@Url.Action("Index", "Users")">Users</a>
                    </li>
                </ul>
                    </div>
                    <!-- /.navbar-collapse -->
         
</div>
        <!-- /.container -->
    </nav>

    <div class="container">
        @RenderBody();
    </div>

    <!-- /.container -->
    <!-- jQuery -->
    <script src="~/Scripts/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Script to Activate the Carousel -->
    <script>
        $('.carousel').carousel({
            interval: 5000 //changes the speed
        });
        $("#menu li a").click(function () {
            $(this).parent().addClass('selected').siblings().removeClass('selected');

        });
    </script>
</body>
</html>







